<div class="container">
    <h1> <%= @article.title %> </h1>
    <div>
        <p>Escrito por: <strong> <%= @article.user.email %> </strong> </p>
        <% if current_user.avatar.attached? %>
            <%= image_tag url_for(current_user.avatar), height: 50 %>
        <% end %>
    </div>
    <p> <%= @article.content %> </p>

    <div>
        <p class="label">Tags</p>
        <% @article.categories.each do |category| %>
            <span class="badge badge-pill p-2" style="background-color: <%= category.color %> ">
                <%= link_to category.title, category, class:"text-light"%>
            </span>
        <% end %>
    </div>

    <div>
        <%= link_to "Eliminar el articulo", @article, method: :delete %>
    </div>
    

</div>