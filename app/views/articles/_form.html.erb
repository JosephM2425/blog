<%= form_with(model: @article, local: true) do |form| %>
    <div class="container field">
        <%=form.label :title%>
        <%=form.text_field :title%>
        
        <div class="field">
            <%=form.label :category_elements%>
            <div class="row">
                <% @categories.each do |category| %>
                    <label class="col-6 col-sm-4"> 
                        <%= form.check_box :category_elements, {multiple: true}, category.id, nil%>
                        <%= category.title %>
                    </label>
                <% end %>
            </div>
        </div>

        <div class="field py-3">
            <%=form.label :img_post%>
            <%=form.file_field :img_post%>
        </div>

        <div class="field py-3">
            <%=form.label :content%>
            <%=form.rich_text_area :content%>
        </div>

        <div>
            <%=form.submit%>
        </div>
    </div>
<%end%>